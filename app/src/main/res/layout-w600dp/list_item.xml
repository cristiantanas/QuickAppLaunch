<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_item_vertical_margin"
    android:paddingBottom="@dimen/list_item_vertical_margin">

    <ImageView
        android:id="@+id/applicationIcon"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_default_height"
        android:layout_weight="1"
        android:contentDescription="@string/desc_application_icon"/>

    <TextView
        android:id="@+id/applicationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="8dp"
        android:textSize="24sp">
    </TextView>

</LinearLayout>